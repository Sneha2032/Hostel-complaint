<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mess Fee Receipt</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/student.css">
</head>

<body>

<!-- HEADER (Same as dashboard) -->
<header class="header no-print">
    <div class="header-content">
        <div class="logo-section">
            <h1 class="logo">üè† Hostel Portal</h1>
        </div>

        <nav class="menu">
            <a href="/mess" class="nav-link">
                <span class="nav-icon">üí≥</span>
                <span>Mess Dues</span>
            </a>
            <a href="/application" class="nav-link">
                <span class="nav-icon">üìù</span>
                <span>Application</span>
            </a>
            <a href="/complaint" class="nav-link">
                <span class="nav-icon">‚ûï</span>
                <span>New Complaint</span>
            </a>
        </nav>

        <div class="header-right">
            <a href="/mess" class="back-btn" title="Back to Mess Dues">
                <span>‚Üê Back to Dues</span>
            </a>
            <a href="/logout" class="logout-btn" title="Logout">
                <span>üö™</span>
            </a>
        </div>
    </div>
</header>

<main class="dashboard-container">
    <div class="content-section">
        <div class="section-header no-print">
            <h2 class="section-title">
                <span class="title-icon">üßæ</span>
                Receipt
            </h2>
            <button class="btn-primary no-print" onclick="window.print()">Print</button>
        </div>

        <div class="receipt-card">
            <div class="receipt-title">
                <h3>Mess Fee Receipt</h3>
                <span class="status-badge status-paid">‚úÖ Paid</span>
            </div>

            <div class="receipt-grid">
                <div class="receipt-row">
                    <span class="label">Student Name</span>
                    <span class="value"><%= due.studentName %></span>
                </div>
                <div class="receipt-row">
                    <span class="label">Enrollment No</span>
                    <span class="value"><%= due.enrollment %></span>
                </div>
                <div class="receipt-row">
                    <span class="label">Semester</span>
                    <span class="value"><%= due.semester %></span>
                </div>
                <div class="receipt-row">
                    <span class="label">Month</span>
                    <span class="value"><%= due.month %></span>
                </div>
                <div class="receipt-row">
                    <span class="label">Paid On</span>
                    <span class="value"><%= due.paidOn ? new Date(due.paidOn).toLocaleString() : "-" %></span>
                </div>
            </div>

            <div class="receipt-amount">
                <span class="label">Amount Paid</span>
                <span class="value amount">‚Çπ<%= due.amount %></span>
            </div>

            <div class="receipt-actions no-print">
                <button class="btn-secondary btn-small" onclick="window.history.back()">Back</button>
                <button class="btn-primary btn-small" onclick="window.print()">Print</button>
            </div>
        </div>
    </div>
</main>

</body>
</html>
